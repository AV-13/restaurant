<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-lZNmG9zrBmYH7Vo+6mzuBPLrXTNWBrEWfQxJ8ZczIIZyhD8YyyA6ew+PLPFc6NfR" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <style>
            body, html {
            height: 100%;
            list-style:none;
            }
            .logo{
                margin: 0px 350px 0px 20px;
            }
            .button{
                margin:10px;
            }
        </style>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}


    </head>
    <style>
.ddd {
      display: block;
    }
.nnn {
      display: none;
    }
</style>
    <body>
        <!-- Modal -->
<div id='modalParent' class='nnn'>
<div class="modal" style="display:block"  id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">


  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel">Merci pour votre message</h4>
      </div>
      <div class="modal-body">
        <h5>Nous reviendrons vers vous très prochainement !</h5><br>
        Redirection en cours...
      </div>
    <!--  <div class="modal-footer">
        <button id="closeBtn" onclick="closeModal()" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div> --!>
    </div>
  </div>
</div>

</div>
        {% block body %}{% endblock %}
        {% block javascripts %}
             
             <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
             
             <script src="https://kit.fontawesome.com/366c5783cc.js" crossorigin="anonymous"></script>
        {{ encore_entry_script_tags('app') }}     
        {% endblock %}
    </body>
    <script>
function launchModal(){
    document.querySelector("#modalParent").classList.remove("nnn");
    document.querySelector("#modalParent").classList.add("ddd");
    document.querySelector("#exampleModal > div > div").classList.add("show");
    
};
function closeModal(){
      //document.querySelector("#exampleModal > div > div").style = "display:none;";
      //document.querySelector("#exampleModal > div > div").classList.remove("show");
      document.querySelector("#modalParent").classList.remove("ddd");
      document.querySelector("#modalParent").classList.add("nnn");
      //document.querySelector("#exampleModal > div > div").classList.add("fade");
    };
    //launchModal();
</script> 
</html>

