                    <p class="card-text">Date: {{ reservatione.date|date("d-m-Y") }}</p>
                    <p class="card-text">Heure: {{ reservatione.heure|date('H:i') }}</p>
                    <p class="card-text">Restaurant: {{ reservatione.restaurantName }}</p>
                    <a href="{{ path('app_reservation_edit', {'id': reservatione.id}) }}" class="btn btn-primary">Modifier</a>
